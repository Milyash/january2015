extends layout

block content
  p Please auth
  p #{flash}
  form(style="max-width: 330px;", method="post")
    h2.form-signin-heading Sign in
    label.sr-only(for="inputEmail") Login
    input#inputEmail.form-control(name="email", type="text", placeholder="Login", required="", autofocus="")
    label.sr-only(for="inputPassword") Password
    input#inputPassword.form-control(name="password", type="password", placeholder="Password", required="")
    button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in
    <a href="/users/register">Register</a>