            nav.navbar.navbar-inverse(role="navigation", style="width:100%; margin: 0px auto; border-radius: 0;  padding:0px 160px")
                .container-fluid
                    .navbar-header
                        button.navbar-toggle.collapsed(type="button",data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href="#", style="text-align: center")
                            img(src="/images/logo-color.png", style="max-width:50px; margin-top: -7px; display: block ")
                    #bs-example-navbar-collapse-1.collapse.navbar-collapse
                        ul.nav.navbar-nav(id="menu")
                            li
                                a.navbar-brand(href="#", style="margin-right:80px") We Track
                            li(id="li_web_pages" )
                                a( href="/page" ) Web pages
                                    span.sr-only (current)
                            li(id="li_videos")
