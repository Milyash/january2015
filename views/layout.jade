                                a.a-black(href="#statistics", aria-controls="statistics", role="tab", data-toggle="tab") Statistics

                        ul.nav.navbar-nav.navbar-right
                            if(req.session.userId)
                                li.dropdown
                                    a#user.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-expanded="false")
                                        span.glyphicon.glyphicon-user
                                        | #{req.session.user.username}
                                        span.caret
                                    ul.navbar-inverse.dropdown-menu(role="menu")
                                        li
                                            a.a-menu_dropdown(href="/users/logout")
                                                span.glyphicon.glyphicon-arrow-left
                                                | Logout
                            else
                                li
                                    a#user(href="/users/login")
                                        span.glyphicon.glyphicon-user
                                        | Login

