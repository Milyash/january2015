extends layout

block content
  p #{flash}
  #data
    form(style="max-width: 330px;", method="post")
      h2.form-signin-heading Sign up
      label.sr-only(for="inputUsername") Username
      input#inputUsername.form-control(name="username",type="text", placeholder="Username", required="", autofocus="")
      label.sr-only(for="inputEmail") Email address
      input#inputEmail.form-control(name="email",type="email", placeholder="Email address", required="", autofocus="")
      label.sr-only(for="inputPassword") Password
      input#inputPassword.form-control(name="password",type="password", placeholder="Password", required="")
      input#inputPassword.form-control(name="password2",type="password", placeholder="Retype password", required="")
      button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in
      <a href="/users/login">Login</a>